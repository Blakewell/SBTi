{
  "openapi": "3.0.0",
  "info": {
    "description": "Portfolio Coverage & Temperature Score Application",
    "version": "1.0.0",
    "title": "SBTi API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "SBTi Request",
      "description": "Temperature Score, Portofolio Coverage, and Reporting API Calls for portfolio environmental impact evaluation."
    }
  ],
  "paths": {
    "/temperature_score/": {
      "parameters": [],
      "post": {
        "tags": [
          "SBTi Request"
        ],
        "summary": "Retrieve the temperature score for your portfolio of companies",
        "requestBody": {
          "description": "Temperature Score Evaluation",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/portfolio"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ]
      }
    },
    "/portfolio_coverage/": {
      "parameters": [],
      "post": {
        "summary": "Retrieve the portfolio coverage score for your portfolio of companies",
        "tags": [
          "SBTi Request"
        ],
        "requestBody": {
          "description": "Portfolio coverage",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/portfolio"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/Port_Coverage"
            }
          },
          "400": {
            "description": "Failed. Bad post data."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "portfolio": {
        "type": "object",
        "properties": {
          "companies": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/company"
            }
          },
          "aggregation_method": {
            "type": "string",
            "format": "string"
          }
        }
      },
      "company": {
        "type": "object",
        "properties": {
          "company_name": {
            "type": "string",
            "format": "string"
          },
          "company_id": {
            "type": "string",
            "format": "string"
          },
          "portfolio_weight": {
            "type": "number",
            "format": "number"
          },
          "investment_value": {
            "type": "number",
            "format": "number"
          }
        }
      }
    }
  }
}